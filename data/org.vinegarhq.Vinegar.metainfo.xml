<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>org.vinegarhq.Vinegar</id>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-only</project_license>
	<name>Vinegar</name>
	<summary>Run Roblox Studio on Linux</summary>
	<description>
		<p>Vinegar is an open-source, configurable, fast bootstrapper for running Roblox Studio on Linux.</p>
	</description>
	<url type="homepage">https://vinegarhq.org</url>
	<url type="help">https://vinegarhq.org</url>
	<url type="contribute">https://github.com/vinegarhq/vinegar</url>
	<url type="vcs-browser">https://github.com/vinegarhq/vinegar</url>
	<url type="bugtracker">https://github.com/vinegarhq/vinegar/issues</url>
	<developer id="vinegarhq.org">
		<name>VinegarHQ</name>
	</developer>
	<launchable type="desktop-id">org.vinegarhq.Vinegar.desktop</launchable>
	<supports>
		<control>pointing</control>
		<control>keyboard</control>
	</supports>

	<screenshots>
		<screenshot type="default">
			<image>https://github.com/vinegarhq/vinegar/raw/v1.9.0/data/screenshots/studio.png</image>
			<caption>Roblox Studio running under Vinegar</caption>
		</screenshot>
		<screenshot>
			<image>https://github.com/vinegarhq/vinegar/raw/v1.9.0/data/screenshots/studio-edit.png</image>
			<caption>Roblox Studio running under Vinegar, displaying the script editor view</caption>
		</screenshot>
		<screenshot>
			<image>https://github.com/vinegarhq/vinegar/raw/v1.9.0/data/screenshots/manager.png</image>
			<caption>Vinegar's main manager page</caption>
		</screenshot>
		<screenshot>
			<image>https://github.com/vinegarhq/vinegar/raw/v1.9.0/data/screenshots/bootstrapper.png</image>
			<caption>Vinegar's Studio bootstrapper in action</caption>
		</screenshot>
	</screenshots>

	<releases>
		<release version="1.9.0" date="2025-10-13">
			<description>
				<ul>
					<li>Redesign main settings page, adding a configurator</li>
					<li>Added user authentication for private Studio deployments</li>
					<li>Improved Edge WebView2 (un)installation</li>
					<li>Improved bootstrapper logic flow</li>
					<li>Show current deployment channel</li>
				</ul>
			</description>
		</release>
		<release version="1.8.1" date="2025-02-10">
			<description>
				<ul>
					<li>Enabled Vulkan by default</li>
					<li>Added opt-out configurable WebView installer</li>
					<li>Added action to launch WINE configurator</li>
					<li>Automatically set Studio theme based on libadwaita</li>
				</ul>
			</description>
		</release>
		<release version="1.8.0" date="2025-02-08">
			<description>
				<ul>
					<li>Switched to GTK4+Libadwaita</li>
					<li>Remove Roblox Player functionality</li>
					<li>Removed WebView installer</li>
					<li>Added Vulkan layer to accomodate Roblox Studio's Vulkan Renderer</li>
					<li>Various refactoring and tweaking to WINE and Roblox management</li>
				</ul>
			</description>
		</release>
		<release version="1.7.8" date="2024-12-06">
			<description>
				<ul>
					<li>Updated Roblox Studios new package manifest dictionary</li>
					<li>Initial Proton and UMU support</li>
					<li>Hide Roblox App and Player desktop entries</li>
				</ul>
			</description>
		</release>
		<release version="1.7.7" date="2024-10-09">
			<description>
				<ul>
					<li>Always remind the user upon Player usage of the Wine block</li>
					<li>Fixed log entry used for process termination of Studio</li>
				</ul>
			</description>
		</release>
		<release version="1.7.6" date="2024-10-01">
			<description>
				<ul>
					<li>Updated Roblox Studios new package manifest dictionary</li>
					<li>Fixed forced system process termination of Roblox</li>
				</ul>
			</description>
		</release>
		<release version="1.7.5" date="2024-07-13">
			<description>
				<ul>
					<li>Implemented Studio Rich Presence</li>
					<li>Updated go modules, fixing CVE-2024-24792</li>
					<li>Add warning message for running Player after the wine block on first run </li>
				</ul>
			</description>
		</release>
		<release version="1.7.4" date="2024-2-13">
			<description>
				<ul>
					<li>Introduced WebView installer</li>
					<li>Kill Roblox if it is still running after it's window is closed</li>
					<li>Fixed multi-prefix DXVK installations</li>
				</ul>
			</description>
		</release>
	</releases>

